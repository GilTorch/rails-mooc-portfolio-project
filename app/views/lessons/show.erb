Course: <%= @chapter.course.title %>
<% if lesson_completed(@lesson) %>
    Completed 
<% else %>
    Not Yet Completed
<% end %>
Chapter: <%= @chapter.title %>
<h1><%= @lesson.title %></h1>
<p><%= @lesson.content %></p>

<% if lesson_completed(@lesson) %>
    <%= link_to "Reset Lesson",reset_lesson_path(@lesson) %>
    <% if @lesson.is_a_lab %>
        <%= render partial:"form_solution" %>
    <% end %>
<% else %>
    <% if !@lesson.is_a_lab %>
        <%= link_to "Mark As Complete",complete_lesson_path(@lesson) %>
    <% else %>
        <%= render partial:"form_solution" %>
    <% end %>
<% end %>



<%= link_to 'Edit', edit_lesson_path %>
<%= link_to 'Destroy', lesson_path(@chapter),data: {:confirm => 'Are you sure?'}, :method => :delete %>
