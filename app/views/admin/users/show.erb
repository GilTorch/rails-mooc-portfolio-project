
<div class="user-show-container text-center col-md-6 offset-md-3 mt-3 mb-3 pb-0">
<div class="jumbotron jumbotron-fluid">
    <h2>User Details</h2>
    <%= @is_admin ? " [ADMIN]" : " [SIMPLE USER]" %>
</div>
<div>
    <b><h2>Username:</h2><%= @user.username %></b>
    <h2>Progess:</h2> 
    <p><b><%= all_courses_completed(@user) %></b> course(s) completed </p>
    <p><b><%= all_chapters_completed(@user) %></b> chapter(s) completed </p>
    <p><b><%= all_lessons_completed(@user) %></b> lesson(s) completed </p>
</div>
<div class="jumbotron jumbotron-fluid actions">
    <%= link_to 'Edit Profile', edit_admin_user_path,:class=>"btn btn-primary" %>
    <%= link_to 'Destroy Profile', admin_user_path(@user),data: {:confirm => 'Are you sure?'}, :method => :delete,:class=>"btn btn-danger" %>
</div>
</div>