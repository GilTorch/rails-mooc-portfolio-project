<div class="container">
    <% flash.each do |key, value| %>
    <div class="flash-messages">
        <div class="alert alert-<%= key %>"><%= flash[key] %></div>
    </div>
    <% end %>
    <%= form_for @course,url:"/admin/courses/#{@course.id}", html: { class: "signup-form col-md-6 offset-md-3" } do |f| %>
        <div class="text-center">
            <h1>Edit Course</h1>
        </div>
        <div class="form-group">
            <%= f.label :title %>
            <%= f.text_field :title,:class => "form-control" %>
        </div>
        <%= f.submit "Edit Course" , :class => "auth-buttons col-md-12 btn btn-primary" %>
    <% end %>
</div>